# TODO - Implement verbose output mechanism
# TODO - Implement logging of file line numbers
# TODO - Implement scanning of ./tasks file
# TODO - Implement error variable and error codes
# TODO - Refactor ***_files to ***_file_name(s) and ***_file_path

. ~/.srcmod
. library.logging.sh

input_files=./*
output_file=./TASKS
exclude_files=(./tasks $output_file ./changelog ./CHANGELOG ./README)
search_keyword=TODO

# We wipe out $output_file on the startup, to avoid duplicate records
> $output_file
for input_file in $input_files
do
    # We skip over a fixed set of $exclude_files. For instance, there is no 
    # need to scan $output_file
    printf "$info Selecting $input_file...\n" >&2
    for exclude_file in ${exclude_files[@]};
    do 
        printf "$info Comparing $input_file and $exclude_file...\n" >&2
        if [ $input_file == $exclude_file ];
        then
            printf "$info Excluding $input_file...\n" >&2
            exclude_file_match_found=true
            break
        else 
            exclude_file_match_found=false
        fi
    done
    # If the selected input file does not match any of the exclude files,
    # proceed to scanning $input_file 
    if [[ $exclude_file_match_found == false ]];
    then
        # Scan $input_file for occurence of $search_keyword 
        printf "$info Scanning $input_file...\n" >&2
        while read line; 
        do 
            echo $line | grep $search_keyword > /dev/null
            if [ $? == 0 ];
            then
                echo "$input_file $line" >> $output_file
            fi
        done < $input_file 
    fi  
done
exit 0
